{
  "name": "aimea-ui",
  "version": "0.1.0",
  "description": "AIMEA live transcript and summary UI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-server": "python3 -m PyInstaller --onefile --distpath dist/server ../server.py",
    "build": "npm run build-server && electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.aimea.desktop",
    "productName": "AIMEA",
    "files": ["**/*", "../aimea/**"],
    "extraResources": [
      {
        "from": "../dist/server/",
        "to": "server",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg"],
      "identity": "${CSC_NAME}"
    },
    "win": { "target": ["nsis"] }
  }
}